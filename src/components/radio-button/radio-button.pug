include Mixins/Type

mixin radio-button(id='', name='', isChecked=false, isRequired=false, value='', labelText='')
  .radio-button
    input.radio-button__input(
      type='radio',
      id=id,
      name=name,
      value=value,
      checked=isChecked,
      required=isRequired
    )
    label.radio-button__label(for=id)
      +type('span', 'body', labelText, 'radio-button__text')
