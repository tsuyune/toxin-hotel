include Mixins/type

mixin toggle(id='', name='', isChecked=false, isRequired=false, value='', labelText='')
  input.toggle__input(
    type='checkbox',
    id=id,
    name=name,
    value=value,
    checked=isChecked,
    required=isRequired
  )
  label.toggle__label(for=id)
    .toggle__box
    +type('span', 'body', labelText, 'toggle__text')
