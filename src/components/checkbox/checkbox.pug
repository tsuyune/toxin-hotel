include Mixins/type

mixin checkbox(ifRich=false, id='', name='', isChecked=false, isRequired=false, value='', labelTextPrimary='', labelTextSecondary='')
  input.checkbox__input(
    type='checkbox',
    id=id,
    name=name,
    value=value,
    checked=isChecked,
    required=isRequired
  )
  label.checkbox__label(for=id)
    .checkbox__box
    if ifRich
      +type('span', 'h2', labelTextPrimary, 'checkbox__text checkbox__text_title')
      +type('span', 'body', labelTextSecondary, 'checkbox__text checkbox__text_description')
    else
      +type('span', 'body', labelTextPrimary, 'checkbox__text checkbox__text_main')
